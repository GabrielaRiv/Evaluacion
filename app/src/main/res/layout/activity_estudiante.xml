<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gabriela.evaluacion.Estudiante">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre" />

        <EditText
            android:id="@+id/codigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Codigo" />

        <EditText
            android:id="@+id/materia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Materia" />

        <EditText
            android:id="@+id/parcial1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Primer Parcial:" />

        <EditText
            android:id="@+id/parcial2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Segundo Parcial:" />

        <EditText
            android:id="@+id/parcial3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tercer Parcial:" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="GUARDAR" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
